#Alias Definitions

#Common
alias ls='ls -G'
alias la='ls -A'
alias ll='ls -alF'
alias l='ls -CF'

alias cd..='cd ..'
alias ..='cd ..'
alias ':q'='exit'

alias ping='ping -c 4'
alias grep='grep --color'

#Custom scripts
alias oth='osascript ~/Dropbox/Documents/Development/Workflows/Open\ Terminal\ Here.scpt &>/dev/null'
alias burp='(java -jar /usr/local/bin/burpsuite_v1.4.01.jar &)'

#Line wrapping and globbing protection for sqlplus
alias sqlplus='noglob rlwrap sqlplus'

# Brew shortcut
alias brewit='brew update && brew upgrade && brew cleanup'

# Overrides
alias vim='/opt/homebrew/bin/vim'
alias gvim='/Applications/MacVim.app/Contents/MacOS/Vim -g'

