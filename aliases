#Alias Definitions

#Common
alias ls='ls -G'
alias la='ls -A'
alias ll='ls -alF'
alias l='ls -CF'

alias cd..='cd ..'
alias ..='cd ..'
alias ':q'='exit'

alias ping='ping -c 4'
alias grep='grep --color'

#Custom scripts
alias oth='osascript ~/Dropbox/Documents/Development/Workflows/Open\ Terminal\ Here.scpt &>/dev/null'
alias burp='(java -jar /usr/local/bin/burpsuite_v1.4.01.jar &)'

#Line wrapping and globbing protection for sqlplus
alias sqlplus='noglob rlwrap sqlplus'

# Brew shortcut
alias brew='env PATH="${PATH//$(pyenv root)/shims:/}" /opt/homebrew/bin/brew'
alias brewit='brew update && brew upgrade && brew cleanup'
alias ibrew='env PATH="${PATH//$(pyenv root)/shims:/}" arch -x86_64 /usr/local/bin/brew'
alias ibrewit='ibrew update && ibrew upgrade && ibrew cleanup'

# Overrides
alias vim='/opt/homebrew/bin/vim'
